<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <div class="row">
        <h4 class="py-4">ユーザー詳細</h4>
      </div>

      <div class="row">
        <div class="col-3">
          <%= image_tag @user.get_image(100, 100), class: "rounded-circle" %>
        </div>

        <div class="col-9">
          <div class="row border-bottom py-2">
            <div class="col-12 col-lg-4">
            ユーザー名
            </div>

            <div class="col">
              <%= @user.name %>
            </div>
          </div>

          <div class="row border-bottom py-2">
            <div class="col-12 col-lg-4">
            プロフィール
            </div>

            <div class="col">
              <%= @user.introduction %>
            </div>
          </div>

          <div class="row border-bottom py-2">
            <div class="col-12 col-lg-4">
            アカウント
            </div>

            <div class="col">
              <% if @user.is_stopped == true %>
                <text>停止</text>
              <% else %>
                <text>有効</text>
              <% end %>
            </div>
          </div>

          <div class="text-center">
            <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-sm btn-secondary mt-3 w-50" %>
          </div>
        </div>
      </div>

      <div class="row">
        <h4 class="py-4">投稿（<%= @user.posts.count %>件）</h4>
      </div>

      <% @user.posts.each do |post| %>
        <div class="row border rounded mb-2">
          <div class="col">
            <p>
              <%= post.created_at.strftime('%Y/%m/%d') %><br>
              <%= post.review %>
            </p>

            <div class="text-center">
              <%= link_to "詳細", admin_post_path(post.id), class: "btn btn-sm btn-secondary mb-2 w-25" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>