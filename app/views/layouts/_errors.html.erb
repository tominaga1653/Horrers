<% if obj.errors.any? %>
  <div class="row mx-auto">
    <div id="error_explanation">
      <h4 class="text-danger"><%= obj.errors.count %> 件のエラーが発生しました</h4>
      <ul class="text-danger">
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>